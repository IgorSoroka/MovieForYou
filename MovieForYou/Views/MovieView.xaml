<Window x:Class="MovieForYou.Views.MovieView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieForYou.Views"
        mc:Ignorable="d"
        Title="MovieView" Height="600" Width="600">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Image x:Name="imgMain" Width="150" Height="150"/>
            <StackPanel Orientation="Vertical">
                <TextBlock FontSize="14" Text="{Binding Path = Title}"/>
                <Label>Сюжет</Label>
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Width="400" FontSize="14" Text="{Binding Path = Overview}"/>
                <ListBox x:Name="lbCrew">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <Image Height="40" Width="40" Source="{Binding Path = Path}"/>
                                <TextBlock Margin="3" FontSize="12" Text="{Binding Path = Name}"/>
                                <TextBlock Margin="3" FontSize="12" Text="{Binding Path = Job}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Label>В главных ролях</Label>
            <ListBox x:Name="lbCast">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <Image Height="70" Width="70" Source="{Binding Path = Path}"/>
                            <TextBlock Margin="3" FontSize="12" Text="{Binding Path = Name}"/>
                            <TextBlock Margin="3" FontSize="12" Text="{Binding Path = Character}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <Label FontSize="12">О фильме</Label>
            <Label FontSize="10">Оригинальное название</Label>
            <TextBlock Margin="3" FontSize="12" Text="{Binding Path = OriginalTitle}"/>
            <Label FontSize="10">Бюджет</Label>
            <TextBlock Margin="3" FontSize="12" Text="{Binding Path = Budget}"/>
            <Label FontSize="10">Домашняя страница</Label>
            <TextBlock Margin="3" FontSize="12" Text="{Binding Path = HomePage}"/>
        </StackPanel>
        <StackPanel Grid.Row="3">
            <Button Click="Button_Click">Поиск</Button>
            <TextBox x:Name="tbSearch"></TextBox>
        </StackPanel>
    </Grid>
</Window>
